<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="7dp"
    android:layout_margin="7dp">
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="10dp"
        android:background="#88f1f4f1"
        android:padding="10dp"
        android:elevation="10dp"
       >
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#d4d2d2">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.pkmmte.view.CircularImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:id="@+id/imageViewDoctorPic"
                    android:src="@drawable/ic_account_circle_white_24dp"
                    app:border="true"
                    app:border_color="#EEEEEE"
                    app:border_width="2dp"
                    app:shadow="true"
                    android:layout_gravity="center"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <TextView
                android:id="@+id/doctorid"
                android:layout_height="wrap_content"
                android:textSize="16dip"
                android:textStyle="bold"
                android:visibility="gone"
                android:layout_width="match_parent"/>
             </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="  Name "
                />

            <TextView
                android:id="@+id/doctorName"
                android:layout_height="wrap_content"
                android:textSize="16dip"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_weight="1"
              />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="  Degree "
                />
            <TextView
                android:id="@+id/doctorDegree"
                android:layout_height="wrap_content"
                android:textSize="16dip"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_weight="1" />
            </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="  Specialization "
                />
            <TextView
                android:id="@+id/doctorSpecialization"
                android:layout_height="wrap_content"
                android:textSize="16dip"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_weight="1"
               />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="  Experience "
                />
            <TextView
                android:id="@+id/doctorExperience"
                android:layout_height="wrap_content"
                android:textSize="16dip"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_weight="1"/>
          </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/doctorBookAppointment"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:textSize="16dip"
                android:textStyle="bold|italic"
                android:textColor="@color/red_pressed"
                android:text="Book Appointment "
                android:gravity="right" />

        </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
