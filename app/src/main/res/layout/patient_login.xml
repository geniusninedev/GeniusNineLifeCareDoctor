<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/transp_background"
    android:orientation="vertical"
    >
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
      >


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editTextUserName"
            android:drawableLeft="@drawable/ic_account_circle_white_24dp"
            android:hint="  Enter User Name"
            android:maxLength="10"
            android:inputType="number"
            android:textColorHint="#999999"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
         />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">



        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:hint=" Enter User Passwrod"
            android:drawableLeft="@drawable/ic_lock_outline_white_24dp"
            android:textSize="20sp"
            android:textColorHint="#999999"
            android:textColor="#FFFFFF"
            android:maxLength="10"
            android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789@#*~`!$^+-*/=."
            android:id="@+id/editTextPassword" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <Button
            android:text="Sign In"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/buttonSignIn"
            android:layout_weight="1"
            android:background="@drawable/blue_btn_drawable"
            android:textColor="@android:color/primary_text_dark" />
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/textViewspace"
    android:text="    "
    />

        <Button
            android:text="Sign Up"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/buttonSignUp"
            android:layout_weight="1"
            android:background="@drawable/blue_btn_drawable"
            android:textColor="@android:color/primary_text_dark"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right">

        <TextView
            android:text="Forget password   "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView7"
            android:textStyle="bold|italic" />

        <TextView
            android:text="Click here "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewforgetpasswordclick"
            android:textStyle="bold|italic"
            android:textSize="15dp"
            android:textColor="@android:color/holo_red_light" />
    </LinearLayout>

</LinearLayout>
</LinearLayout>
